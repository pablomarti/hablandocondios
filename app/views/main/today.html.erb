<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <h1 class="page-header"><%= @devotional.title %>
                <small>DÃ­a: <%= @devotional.day.to_s %></small>
            </h1>
        </div>

        <div class="col-lg-4 right">
            <h3 class="page-header">
                <a href="<%= all_days_url %>">Ver todos los devocionales</a>
            </h3>
        </div>
    </div>

    <div class="row">

        <div class="col-md-7 center">
            <% if @devotional.image.url.nil? %>
                <img class="img-responsive" src="http://placehold.it/700x300" alt="">
            <% else %>
                <%= image_tag @devotional.image.url, :class => 'img-responsive' %>
            <% end %>
            <br />

            <% if @devotional.file.url.nil? %>
                <%= link_to 'Descargar PDF', download_devotional_path(@devotional, :format => 'pdf'), :class => 'btn btn-success' %>
            <% else %>
                <%= link_to 'Descargar Documento', @devotional.file.url, :class => 'btn btn-success' %>
            <% end %>
        </div>

        <% if !@devotional.passage_text.nil? && @devotional.passage_text.strip != "" %>
            <div class="col-md-5">
                <h3><%= @devotional.passage %></h3>
                <p>
                    <i><%= format_to_br(@devotional.passage_text) %></i>
                </p>
            </div>
        <% end %>
    </div>

    <div class="row">
    	<div class="col-md-12">
            <h3>Historia</h3>
            <p>
            	<%= format_to_br(@devotional.story) %>
            </p>

            <% if !@devotional.questions.nil? && @devotional.questions.strip != "" %>
                <h3>Preguntas</h3>
                <p>
                	<%= format_to_br(@devotional.questions) %>
                </p>
            <% end %>

            <% if !@devotional.passage_mem.nil? && @devotional.passage_mem.strip != "" %>
                <h3>Pasaje a memorizar</h3>
                <p>
                	<blockquote><%= @devotional.passage_mem %></blockquote>
                </p>
            <% end %>
    	</div>
    </div>

    <% if !@devotional.quote.nil? && @devotional.quote.strip != "" %>
        <div class="row center">
            <div class="col-md-12">
                <i><%= @devotional.quote %></i>
            </div>
        </div>
    <% end %>

    <% if !@devotional.credits.nil? && @devotional.credits.strip != "" %>
        <hr />

        <div class="row center">
            <div class="col-md-12">
                <strong>Creditos: </strong><%= @devotional.credits %>
            </div>
        </div>
    <% end %>

