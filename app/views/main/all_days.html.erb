
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Hablando con Dios
                <small>Un proyecto de <%= link_to "Iglesia Bautista Vida Nueva", 'http://ibvn.org', :target => '_BLANK' %></small>
            </h1>
        </div>
    </div>

    <%= render :partial => 'devotional', :collection => @devotionals %>

    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <% for i in 1..@total_pages %>
                    <li class="<%= @page == i ? 'active' : '' %>">
                        <a href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; hablandocondios.com <%= Time.now.year %></p>
            </div>
        </div>
    </footer>
</div>